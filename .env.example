# Server Configuration
NODE_ENV=development          # development | production
PORT=3000                     # HTTP port
HTTPS_PORT=3443              # HTTPS port

# SSL/TLS Configuration
ENABLE_HTTPS=false           # Enable HTTPS (true for production)
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# Agent Configuration
AGENT_URL=http://dani-agent:8080/chat

# Security
CORS_ORIGIN=http://localhost:3000  # Allowed origins for CORS (use https:// for production)
RATE_LIMIT_WINDOW_MS=60000        # Rate limit window (1 minute)
RATE_LIMIT_MAX_REQUESTS=100       # Max requests per window

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production-use-random-64-char-string
SESSION_SECRET=change-me-in-production-use-a-long-random-string

# Database Configuration
DB_HOST=postgres                # Database host (use 'localhost' for local dev, 'postgres' in docker)
DB_PORT=5432                    # PostgreSQL port
DB_NAME=dani                    # Database name
DB_USER=dani_user               # Database user
DB_PASSWORD=change-me-in-production  # Database password
DB_SSL=false                    # Use SSL for database connection
